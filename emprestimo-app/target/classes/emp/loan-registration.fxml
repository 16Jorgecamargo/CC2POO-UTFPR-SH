<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.LoanRegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Registro de Empréstimos" style="-fx-font-size: 24px;"/>

    <GridPane hgap="10" vgap="10">
        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Cliente:"/>
            <ComboBox fx:id="customerCombo" prefWidth="200"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Valor do Empréstimo:"/>
            <TextField fx:id="amountField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Taxa de Juros (%):"/>
            <TextField fx:id="interestRateField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Tipo de Juros:"/>
            <ComboBox fx:id="interestTypeCombo" prefWidth="200"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Label text="Prazo:"/>
            <TextField fx:id="termField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Label text="Tipo de Prazo:"/>
            <ComboBox fx:id="termTypeCombo" prefWidth="200"/>
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Simular" onAction="#handleOpenSimulation"/>
        <Button text="Salvar" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Limpar" onAction="#handleClear"/>
        <Button text="Voltar" onAction="#handleBack"/>
    </HBox>

    <Label text="Valor Total Simulado:" style="-fx-font-weight: bold;"/>
    <Label fx:id="simulatedAmountLabel" style="-fx-font-size: 18px;"/>

    <TableView fx:id="loansTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="customerColumn" text="Cliente" prefWidth="150"/>
            <TableColumn fx:id="amountColumn" text="Valor" prefWidth="100"/>
            <TableColumn fx:id="interestRateColumn" text="Juros" prefWidth="80"/>
            <TableColumn fx:id="termColumn" text="Prazo" prefWidth="100"/>
            <TableColumn fx:id="totalAmountColumn" text="Total" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>
            <TableColumn fx:id="actionsColumn" text="Ações" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>