<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.LoanSimulationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Simulação de Empréstimo" style="-fx-font-size: 24px;"/>

    <GridPane hgap="10" vgap="15">
        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Valor do Empréstimo:"/>
            <TextField fx:id="amountField" promptText="R$"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Taxa de Juros (%):"/>
            <TextField fx:id="interestRateField" promptText="%%"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Prazo:"/>
            <TextField fx:id="termField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Tipo de Prazo:"/>
            <ComboBox fx:id="termTypeCombo" prefWidth="150"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <Label text="Tipo de Juros:"/>
            <ComboBox fx:id="interestTypeCombo" prefWidth="150"/>
        </VBox>
    </GridPane>

    <VBox spacing="10" style="-fx-padding: 15; -fx-border-color: #ccc; -fx-border-radius: 5;">
        <Label text="Resultado da Simulação" style="-fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="5">
            <Label text="Valor do Empréstimo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="resultAmountLabel" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Juros Total:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="resultInterestLabel" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Valor Total:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
            <Label fx:id="resultTotalLabel" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>

            <Label text="Valor da Parcela:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="resultInstallmentLabel" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Simular" onAction="#handleSimulate" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Limpar" onAction="#handleClear"/>
        <Button text="Voltar" onAction="#handleBack"/>
    </HBox>
</VBox>