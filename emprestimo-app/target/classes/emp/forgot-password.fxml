<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.ForgotPasswordController">
    <children>
        <Label text="Recuperação de Senha" style="-fx-font-size: 24px;"/>
        
        <VBox spacing="5">
            <Label text="Nome de Usuário:"/>
            <TextField fx:id="userField" style="-fx-pref-width: 200;"/>
        </VBox>

        <Label fx:id="errorMessage" style="-fx-text-fill: red;"/>
        
        <Button fx:id="recoverButton" text="Recuperar Senha" onAction="#handleRecover" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 200;"/>
        <Button fx:id="backButton" text="Voltar" onAction="#handleBack" 
                style="-fx-pref-width: 200;"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>