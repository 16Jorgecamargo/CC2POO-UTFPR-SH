<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.AgiotaMainMenuController">
        <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <children>
                <Label text="Menu Principal" style="-fx-font-size: 30px;"/>
                <Label text="Agiota" style="-fx-font-size: 20px;"/>

                <Button text="Cadastro de Clientes" onAction="#handleCustomerRegistration" style="-fx-pref-width: 200;"/>
                <Button text="Registro de Empréstimos" onAction="#handleLoanRegistration" style="-fx-pref-width: 200;"/>
                <Button text="Monitoramento de Pagamentos" onAction="#handlePaymentMonitoring" style="-fx-pref-width: 200;"/>
                <Button text="Relatórios" onAction="#handleReports" style="-fx-pref-width: 200;"/>
                <Button text="Painel de Controle" onAction="#handleControlPanel" style="-fx-pref-width: 200;"/>
                <Button text="Simulação de Empréstimos" onAction="#handleLoanSimulation" style="-fx-pref-width: 200;"/>
                <Button text="Configurações" onAction="#handleSettings" style="-fx-pref-width: 200;"/>
                <Button text="Sair" onAction="#handleLogout" style="-fx-pref-width: 200;"/>
        </children>
</VBox>