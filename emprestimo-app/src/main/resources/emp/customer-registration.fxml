<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="emp.controllers.CustomerRegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Cadastro de Clientes" style="-fx-font-size: 24px;"/>

    <GridPane hgap="10" vgap="10">
        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Nome Completo:"/>
            <TextField fx:id="nameField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="CPF:"/>
            <TextField fx:id="cpfField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
            <Label text="Endereço:"/>
            <TextField fx:id="addressField"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
            <Label text="Histórico de Crédito:"/>
            <TextArea fx:id="creditNoteField" prefRowCount="3"/>
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Limpar" onAction="#handleClear"/>
        <Button text="Voltar" onAction="#handleBack"/>
    </HBox>

    <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nome" prefWidth="200"/>
            <TableColumn fx:id="cpfColumn" text="CPF" prefWidth="100"/>
            <TableColumn fx:id="addressColumn" text="Endereço" prefWidth="200"/>
            <TableColumn fx:id="creditNoteColumn" text="Histórico" prefWidth="150"/>
            <TableColumn fx:id="actionsColumn" text="Ações" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>