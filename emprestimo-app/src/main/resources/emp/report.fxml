<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.ReportController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Relatórios" style="-fx-font-size: 24px;"/>

    <!-- Filtros -->
    <GridPane hgap="10" vgap="10">
        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Data Inicial:"/>
            <DatePicker fx:id="startDate"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Data Final:"/>
            <DatePicker fx:id="endDate"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Tipo de Relatório:"/>
            <ComboBox fx:id="reportType" prefWidth="200"/>
        </VBox>

        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Cliente (Opcional):"/>
            <ComboBox fx:id="customerSelect" prefWidth="200"/>
        </VBox>
    </GridPane>

    <!-- Botões de Ação -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Gerar Relatório" onAction="#handleGenerateReport" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Exportar PDF" onAction="#handleExportPDF"/>
        <Button text="Exportar Excel" onAction="#handleExportExcel"/>
        <Button text="Voltar" onAction="#handleBack"/>
    </HBox>

    <!-- Tabela de Resultados -->
    <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Data" prefWidth="100"/>
            <TableColumn fx:id="customerColumn" text="Cliente" prefWidth="150"/>
            <TableColumn fx:id="descriptionColumn" text="Descrição" prefWidth="200"/>
            <TableColumn fx:id="valueColumn" text="Valor" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>