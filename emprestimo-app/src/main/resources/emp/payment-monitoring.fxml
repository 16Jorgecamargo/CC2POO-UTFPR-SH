<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<VBox spacing="10"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.PaymentMonitoringController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Monitoramento de Pagamentos" style="-fx-font-size: 24px;"/>

    <!-- Filtros -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Período:"/>
        <DatePicker fx:id="startDate" promptText="Data Inicial"/>
        <Label text="até"/>
        <DatePicker fx:id="endDate" promptText="Data Final"/>

        <Label text="Status:" translateX="20"/>
        <ComboBox fx:id="statusFilter" promptText="Selecione"/>

        <Button text="Filtrar" onAction="#handleFilter"/>
    </HBox>

    <!-- Tabela de Pagamentos -->
    <TableView fx:id="paymentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="customerColumn" text="Cliente" prefWidth="150"/>
            <TableColumn fx:id="amountColumn" text="Valor Pago" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Data" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Estatísticas -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5;">
            <Label text="Total de Pagamentos" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalPaymentsLabel" text="R$ 0,00" style="-fx-font-size: 18px;"/>
        </VBox>

        <VBox alignment="CENTER" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5;">
            <Label text="Pagamentos Atrasados" style="-fx-font-weight: bold;"/>
            <Label fx:id="latePaymentsLabel" text="0" style="-fx-font-size: 18px;"/>
        </VBox>

        <VBox alignment="CENTER" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5;">
            <Label text="Total em Atraso" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalLateLabel" text="R$ 0,00" style="-fx-font-size: 18px;"/>
        </VBox>
    </HBox>

    <!-- Botões -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Registrar Pagamento" onAction="#handleRegisterPayment" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Notificar Cliente" onAction="#handleNotifyCustomer"/>
        <Button text="Voltar" onAction="#handleBack"/>
    </HBox>
</VBox>