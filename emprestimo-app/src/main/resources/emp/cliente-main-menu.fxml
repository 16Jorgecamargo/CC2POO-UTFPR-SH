<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="emp.controllers.ClienteMainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="Painel do Cliente" style="-fx-font-size: 24px;"/>

        <Button text="Solicitar Empréstimo" onAction="#handleLoanRequest" style="-fx-pref-width: 250;"/>
        <Button text="Consultar Empréstimos" onAction="#handleLoanConsultation" style="-fx-pref-width: 250;"/>
        <Button text="Realizar Pagamento" onAction="#handlePayment" style="-fx-pref-width: 250;"/>
        <Button text="Consultar Pagamentos" onAction="#handlePaymentConsultation" style="-fx-pref-width: 250;"/>
        <Button text="Configurações" onAction="#handleSettings" style="-fx-pref-width: 250;"/>
        <Button text="Sair" onAction="#handleLogout" style="-fx-pref-width: 250;"/>
    </children>
</VBox>